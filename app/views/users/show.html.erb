<div class="container">
  <%= render 'episodes/popup' %>
  <h1><%= @user.username %></h1>
  <% if current_user.following?(@user) && current_user.followed_by?(@user) %>
    <p>(You Follow Each Other)</p>
  <% elsif current_user.following?(@user) %>
    <p>(Following)</p>
  <% elsif current_user.followed_by?(@user) %>
    <p>(Follows You)</p>
  <% end %>

  <a href="#" class='tab my-donations-tab'>Donations</a>
  <a href="#" class='tab following-tab'>Following</a>
  <a href="#" class='tab followers-tab'>Followers</a>

  <ul class="my-donations" >
    <% @donations.each do |donation| %>
      <li>
        <%= donation.episode.name %>
      </li>
    <% end %>
  </ul>

  <ul class = "following hidden">
    <% @following.each do |user| %>
      <li>
        <%= user.username %>
      </li>
    <% end %>
  </ul>

  <ul class="followers hidden">
    <% @followers.each do |user| %>
      <li>
        <%= user.username %>
      </li>
    <% end %>
  </ul>

  <% if @user == current_user %>
    <%= link_to 'Edit Profile', '#' %>
  <% else %>
    <% if current_user.following?(@user) %>
      <%= link_to 'Unfollow', toggle_follow_path(@user), class: 'relationship unfollow', method: :post, remote: true %>
    <% else %>
      <%= link_to 'Follow', toggle_follow_path(@user), class: 'relationship', method: :post, remote: true %>
    <% end %>
  <% end %>
</div>
