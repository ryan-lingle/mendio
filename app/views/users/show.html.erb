<div class="container">
  <div class="feed user-feed">
    <div class="profile-wrapper">
      <%= render 'shared/profile', user: @user %>
    </div>
  </div>
  <div class="my-donations">
      <%= render 'shared/feed', user: @user, feed: @user.donations %>
  </div>

  <div class = "following hidden">
    <% @following.each do |user| %>
      <div class="feed">
        <div class="feed-search">
          <div class="wrapper-profile">
            <%= render 'shared/profile', user: user %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="followers hidden">
    <% @followers.each do |user| %>
      <div class="feed">
        <div class="feed-search">
          <div class="wrapper-profile">
            <%= render 'shared/profile', user: user %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="bookmarks hidden">
    <% @bookmarks.each do |bookmark| %>
      <%= bookmark.episode.name %>
    <% end %>
  </div>
</div>
