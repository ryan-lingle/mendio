<div class="container">
  <div class="feed">
    <div class="profile-wrapper">
      <div class="profile-header">
        <%= cl_image_tag @user.profile_pic, height: 70, width: 70, class: "profile-avatar" %>
        <h3><%= @user.username %></h3>
        <% if @user == current_user %>
          <%= link_to 'Edit Profile', '#', class: "btn btn-success btn-sm" %>
        <% else %>
          <% if current_user.following?(@user) %>
            <%= link_to 'Unfollow', toggle_follow_path(@user), class: 'relationship unfollow', class: "btn btn-success btn-sm",method: :post, remote: true %>
          <% else %>
            <%= link_to 'Follow', toggle_follow_path(@user), class: 'relationship', class: "btn btn-success btn-sm", method: :post, remote: true %>
          <% end %>
        <% end %>
      </div>

<div class="social-icons">
  <div class="icon">
    <a href="#" class='tab followers-tab'>
      <i class="fas fa-user-friends"></i></a>
    <h4><%= @followers.count %></h4>
    <p>followers</p>
  </div>

  <div class="icon">
    <a href="#" class='tab my-donations-tab'>
      <i class="fas fa-coins"></i></a>
    <h4><%= @donations.count %></h4>
    <p>donations</p>
  </div>

  <div class="icon">
    <a href="#" class='tab following-tab'>
      <i class="fas fa-user-friends"></i></a>
    <h4><%= @following.count %></h4>
    <p>following</p>
  </div>
</div>

    </div>
  </div>
    <%= render 'shared/feed', feed: @user.donations %>
  <h1><%= @user.username %></h1>
  <% if current_user.following?(@user) && current_user.followed_by?(@user) %>
    <p>(You Follow Each Other)</p>
  <% elsif current_user.following?(@user) %>
    <p>(Following)</p>
  <% elsif current_user.followed_by?(@user) %>
    <p>(Follows You)</p>
  <% end %>

  <a href="#" class='tab my-donations-tab'>Donations</a>
  <a href="#" class='tab following-tab'>Following</a>
  <a href="#" class='tab followers-tab'>Followers</a>

  <ul class="my-donations">
    <% @donations.each do |donation| %>
      <li>
        <%= donation.episode.name %>
      </li>
    <% end %>
  </ul>

  <ul class = "following hidden">
    <% @following.each do |user| %>
      <li>
        <%= user.username %>
      </li>
    <% end %>
  </ul>

  <ul class="followers hidden">
    <% @followers.each do |user| %>
      <li>
        <%= user.username %>
      </li>
    <% end %>
  </ul>

  <% if @user == current_user %>
    <%= link_to 'Edit Profile', '#' %>
  <% else %>
    <% if current_user.following?(@user) %>
      <%= link_to 'Unfollow', toggle_follow_path(@user), class: 'relationship unfollow', method: :post, remote: true %>
    <% else %>
      <%= link_to 'Follow', toggle_follow_path(@user), class: 'relationship', method: :post, remote: true %>
    <% end %>
  <% end %>
</div>
