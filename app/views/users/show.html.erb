<div class="container">
  <div class="feed user-feed">
    <div class="profile-wrapper">
      <%= render 'shared/profile', user: @user %>
    </div>
  </div>
  <div class="my-donations">
      <%= render 'shared/feed', feed: @user.donations %>
  </div>

  <ul class = "following hidden">
    <% @following.each do |user| %>
      <li>
        <%= user.username %>
      </li>
    <% end %>
  </ul>

  <ul class="followers hidden">
    <% @followers.each do |user| %>
      <li>
        <%= user.username %>
      </li>
    <% end %>
  </ul>

  <% if @user == current_user %>
    <%= link_to 'Edit Profile', '#' %>
  <% else %>
    <% if current_user.following?(@user) %>
      <%= link_to 'Unfollow', toggle_follow_path(@user), class: 'relationship unfollow', method: :post, remote: true %>
    <% else %>
      <%= link_to 'Follow', toggle_follow_path(@user), class: 'relationship', method: :post, remote: true %>
    <% end %>
  <% end %>
</div>
