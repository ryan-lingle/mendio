<div class="profile-header">
  <%= cl_image_tag @user.profile_pic, height: 70, width: 70, class: "profile-avatar" %>
  <h3><%= @user.username %></h3>
  <% if @user == current_user %>
    <%= link_to 'Edit Profile', '#', class: "btn btn-success btn-sm" %>
  <% else %>
    <% if current_user.following?(@user) %>
      <%= link_to 'Unfollow', toggle_follow_path(@user), class: 'relationship unfollow', class: "btn btn-success btn-sm",method: :post, remote: true %>
    <% else %>
      <%= link_to 'Follow', toggle_follow_path(@user), class: 'relationship', class: "btn btn-success btn-sm", method: :post, remote: true %>
    <% end %>
  <% end %>
</div>

