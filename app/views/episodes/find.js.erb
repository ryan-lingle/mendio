const episodeResults = document.querySelector('.episode-results')

'<% @results.each do |result| %>'
episodeResults.insertAdjacentHTML('beforeend', "<li class='podcast'><%= result.name %></li>")
'<% end %>'

function clicker(results) {
  results.addEventListener('click', (event) => {
    episodeInput.value = event.target.innerText;
    document.querySelector(".episode-results").innerHTML = "";
    document.querySelector('#hidden-episode').value = event.target.innerText;
  })
}

clicker(episodeResults)
